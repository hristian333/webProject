<main>
  <section id="edit-container">
    <div class="edit-container-info">
      <h1>Edit Course</h1>
      <form action="/catalog/edit/{{book._id}}" method="POST">
        <label>Title:</label>
        <input name="title" type="text" id="title" value="{{book.title}}" />

        <label>Type:</label>
        <input name="type" type="text" id="type" value="{{book.type}}" />

        <label>Certificate:</label>
        <input
          name="certificate"
          type="text"
          id="certificate"
          value="{{book.certificate}}"
        />

        <label>Image:</label>
        <input
          name="image"
          type="text"
          id="image"
          placeholder="http://..."
          value="{{book.image}}"
        />

        <label>Description:</label>
        <textarea
          id="content"
          name="description"
        >{{book.description}}</textarea>

        <label>Price:</label>
        <input name="price" type="number" id="price" value="{{book.price}}" />

        <input type="submit" id="btn" value="Edit" />
      </form>
    </div>
  </section>
</main>
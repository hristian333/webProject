<main>
  <div class="container">
    <div class="course-message">
      <h1 id="site-title">Course Book</h1>
      <h2 id="site-mid-title">Show your opportunities!</h2>
    </div>

{{#if books}}
    <div class="last-course">
    {{#each books}}
    {{> homeCard}}
    {{/each}}
    </div>
    {{else}}
    <!-- If there are still no course posts on the database -->
     <article class="not-available-course">
                    <h1>No course created yet.</h1>
                </article> 
                {{/if}}
  </div>
</main>